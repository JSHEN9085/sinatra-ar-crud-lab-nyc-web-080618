<!DOCTYPE html>

<html>
    <head>
        <title>Show Posts</title>
    </head>
    <body>

      <h2><%= @post.name %></h2>
      <br>
      <h2><%= @post.content %></h2>
       <form action="/posts/<%= @post.id %>/delete" method="POST">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input id="delete" type="submit" value="Delete Post">
      </form>

    </body>
</html>
